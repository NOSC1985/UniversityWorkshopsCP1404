BoxLayout
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 1
        orientation: 'horizontal'
        TextInput:
            size_hint: 0.35, 1
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        Button:
            size_hint: 0.3, 1
            text: 'Square'
            on_press: app.handle_calculate()
        Label:
            size_hint: 0.35, 1
            id: output_label
            font_size: 48
            color: (1, .1, .3, 1)

    BoxLayout:
        size_hint_y: 1
        Label:
            size_hint: 0.5, 0.5
            id: output_label
            font_size: 25
            text: "Enter a number and press 'Square'"
            color: (1, 1, 1, 1)